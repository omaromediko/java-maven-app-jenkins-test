pipeline {
    agent any
    parameters {
        choice(name: 'VERSION', choices: ['1.1.0', '1.2.0', '1.3.0'], description:'')
        booleanparam(namme: 'executeTests', defaultvalue: true, description: '')
    }    
        stage("build") {
            steps {
                echo 'building the application...'
            }
        } 
        stage("test") {
            when {
                expression {
                    BRANCH_NAME == 'main' 
                }
            }      
            steps {
                echo 'testing the application...'
            }
        }    
        stage("deploy") {
            steps {
                 echo 'deploying the application...'
                 echo "deploying VERION ${param.VERSION}"
            }
        }
    } 
    post {
        always {
            echo 'always show me output'
        }
        success {
            echo 'all the stages run successfully'
        }
        failure { 
            echo 'may be some stage have issues'
        }
    }
}                    
